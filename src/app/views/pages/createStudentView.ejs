<%- contentFor('body') %>
<%- include('../public/styleCreateUpdate') %>
<div>
    <h1 align="center">Cadastro de Estudante</h1>
</div>

<div class="container">
    <form id="studentForm" action="/create" method="POST">
      <div class="form-group">
        <label>Nome:</label>
        <input type="text" name="name" required>
      </div>
      <div class="form-group">
        <label>Data de nascimento:</label>
        <input 
        type="date" 
        name="dateOfBirth"
        min="1940-01-01"
        max="2023-12-31" required>
      </div>
      <div class="form-group">
        <label>Email:</label>
        <input type="text" name="email" required>
      </div>
      <div class="form-group">
        <label>Status:</label>
        <input type="text" name="status" value="ATIVO" required>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn-save">Salvar</button>
        <button type="button" class="btn-cancel"><a href="/">Cancelar</a></button>
      </div>
    </form>
</div>